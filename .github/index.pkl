amends "@pkl.impl.ghactions/PklCI.pkl"

import "@com.github.actions/catalog.pkl"
import "@pkl.impl.ghactions/jobs/HawkeyeCheck.pkl"
import "@pkl.impl.ghactions/steps/SetupPkl.pkl"

local swiftImage = "swift:6.1-rhel-ubi9"
local pklVersion = "0.30.0"

prb = main

build = main

main {
  jobs {
    ["test-format-license-headers"] = new HawkeyeCheck {}.job
    ["test"] {
      `runs-on` = "ubuntu-latest"
      name = "Test"
      container {
        image = swiftImage
      }
      steps {
        (catalog.`actions/checkout@v6`) {}
        new SetupPkl { version = pklVersion }.step
        new { run = "swift test" }
      }
    }
    ["test-format-pkl"] {
      `runs-on` = "ubuntu-latest"
      steps {
        (catalog.`actions/checkout@v6`) {}
        new SetupPkl { version = pklVersion }.step
        new { run = "pkl format --grammar-version 1 ." }
      }
    }
  }
}
