amends "package://pkg.pkl-lang.org/pkl-project-commons/pkl.impl.circleci@1.0.1#/PklCI.pkl"

prb {
  jobs {
    "test"
    "test-license-headers"
  }
}

main {
  jobs {
    "test"
    "test-license-headers"
  }
}

jobs {
  ["test"] {
    docker {
      new {
        image = "swift:5.9"
      }
    }
    steps {
      "checkout"
      new RunStep {
        command = """
          apt-get -y update
          apt-get -y install curl
          curl -L -o pkl.bin https://github.com/apple/pkl/releases/download/0.25.2/pkl-linux-amd64
          chmod +x pkl.bin
          PKL_EXEC=$(pwd)/pkl.bin swift test
          """
      }
    }
  }

  ["test-license-headers"] {
    docker {
      new {
        image = "ghcr.io/korandoru/hawkeye"
      }
    }
    steps {
      "checkout"
      new RunStep {
        command = "/bin/hawkeye check --fail-if-unknown"
      }
    }
  }
}